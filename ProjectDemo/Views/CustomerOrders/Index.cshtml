@model ProjectDemo.Models.CustomerDetails

<h1>Customer Details</h1>


@Html.ActionLink("Create Customer", "Create") 



<table class="table table-striped table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].ID)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].companyName)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].contactName)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].contactTitle)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].address)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].city)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].country)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].Phone)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].PostalCode)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].Region)</th>
        <th>@Html.DisplayNameFor(Model => Model.CustomerCollection[0].Fax)</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model.CustomerCollection )
    {
    <tr>
        <td>@Html.DisplayFor(ModelItem => item.ID)</td>
        <td>@Html.DisplayFor(ModelItem => item.companyName)</td>
        <td>@Html.DisplayFor(ModelItem => item.contactName)</td>
        <td>@Html.DisplayFor(ModelItem => item.contactTitle)</td>
        <td>@Html.DisplayFor(ModelItem => item.address)</td>
        <td>@Html.DisplayFor(ModelItem => item.city)</td>
        <td>@Html.DisplayFor(ModelItem => item.country)</td>
        <td>@Html.DisplayFor(ModelItem => item.Phone)</td>
        <td>@Html.DisplayFor(ModelItem => item.PostalCode)</td>
        <td>@Html.DisplayFor(ModelItem => item.Region)</td>
        <td>@Html.DisplayFor(ModelItem => item.Fax)</td>
        <td>@Html.ActionLink("Edit","EditCustomers",null,new { id= item.ID})</td>
    </tr>

    }
</table>

